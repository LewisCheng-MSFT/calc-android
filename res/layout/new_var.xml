<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:text="Variable name:" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/etName">
        <requestFocus></requestFocus>
    </EditText>
    <TextView android:text="Initial value:" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/etValue" android:inputType="numberDecimal"></EditText>
    <Button android:text="Submit" android:id="@+id/btnSubmit" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    <Button android:text="Cancel" android:id="@+id/btnCancel" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    
</LinearLayout>
